{
  "name": "my_project/framework",
  "description": "Framework for my PHP project",
  "require": {
    "PHP": "^8.3",
    "psr/http-factory": "^1.1",
    "psr/http-message": "^2.0",
    "psr/container": "^2.0",
    "vlucas/phpdotenv": "^5.6",
    "ext-pdo": "*"
  },
  "scripts": {
    "insights": "php8.4 ./vendor/bin/phpinsights -vvv",
    "insights-fix": "php8.4 ./vendor/bin/phpinsights --fix",
    "phpstan": "php8.4 vendor/bin/phpstan -l8 analyse",
    "test": "php8.4 vendor/bin/phpunit",
    "test-coverage-html": "XDEBUG_MODE=coverage php8.4 vendor/bin/phpunit --coverage-html coverage",
    "test-coverage-html2": "vendor/bin/phpunit --coverage-filter ./src --coverage-html ./coverage",
    "test-coverage": "XDEBUG_MODE=coverage 8.4 vendor/bin/phpunit --coverage-text"
  },
  "autoload": {
    "psr-4": {
      "DJWeb\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^11",
    "nunomaduro/phpinsights": "dev-feature/sebastian-diff-6",
    "phpstan/phpstan": "^1.11",
    "symfony/var-dumper": "^5.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/IsraelPinheiro/phpinsights"
    },
    {
      "type": "vcs",
      "url": "https://github.com/indy2kro/phploc"
    }
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
