{
  "name": "my_project/framework",
  "description": "Framework for my PHP project",
  "require": {
    "PHP": "^8.3",
    "psr/http-message": "^2.0"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/phpunit",
    "test-coverage": [
      "export XDEBUG_MODE=coverage || set XDEBUG_MODE=coverage",
      "vendor/bin/phpunit --coverage-html coverage"
    ]
  },
  "autoload": {
    "psr-4": {
      "DJWeb\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^11",
    "nunomaduro/phpinsights": "dev-feature/sebastian-diff-6",
    "phpstan/phpstan": "^1.11",
    "symfony/var-dumper": "^5.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/IsraelPinheiro/phpinsights"
    },
    {
      "type": "vcs",
      "url": "https://github.com/indy2kro/phploc"
    }
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
